<UserControl x:Class="BOOK_SCRIBBLE_PROJECT.UserControls.ShelfView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinHeight="220"
             HorizontalAlignment="Stretch">
    <!-- 선반 한 줄: 위=책3칸 / 아래=갈색판자 -->
    <Grid Margin="0,12,0,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 책 3칸: Shelf.Books 바인딩 -->
        <ItemsControl Grid.Row="0" ItemsSource="{Binding Books}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <!-- 항상 가운데 정렬 -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Width="80" Height="120" Margin="10,0"
                  Background="#F5F5F5" BorderBrush="#DDDDDD" BorderThickness="1">
                        <!-- Book.CoverPath 사용(아래 주의사항 참고) -->
                        <Image Source="{Binding CoverPath}" Stretch="UniformToFill"/>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- 가로로 긴 갈색 선반(부모 폭 가득) -->
        <Border Grid.Row="1"
            Height="12"
            Margin="0,12,0,0"
            Background="#654321"
            CornerRadius="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom">
            <Border.Effect>
                <DropShadowEffect BlurRadius="6" ShadowDepth="1" Opacity="0.30"/>
            </Border.Effect>
        </Border>
    </Grid>
</UserControl>
